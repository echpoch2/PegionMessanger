<Page x:Class="Pigeon_.auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pigeon_"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="auth">

    <Grid>
        <TextBox  HorizontalAlignment="Left" Height="23" Margin="293,76,0,0" TextWrapping="Wrap" Text="{Binding login}" VerticalAlignment="Top" Width="120"/>
        <TextBox  HorizontalAlignment="Left" Height="23" Margin="293,99,0,0" TextWrapping="Wrap" Text="{Binding password}" VerticalAlignment="Top" Width="120"/>
        <Button Command="{Binding AuthCommand}" Content="auth" HorizontalAlignment="Left" Margin="306,132,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Command="{Binding RegisterPageCommand}" Content="reg" HorizontalAlignment="Left" Margin="306,156,0,0" VerticalAlignment="Top" Width="75"/>
       
    </Grid>
</Page>
